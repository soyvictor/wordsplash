<!-- <h1>The word is <%= @word.word %></h1> -->

<div class="container mb-5">
  <div class="row">
    <div class="col-sm-4 offset-sm-4 mt-5">
      <div class="mb-3">
      <%= link_to 'Take me to my words', words_path %>
      </div>

      <% if @word.image_urls.present? %>
      <%= image_tag(@word.image_urls.sample, :alt => "nothing yet...") %>
      <!-- .concat("&w=400&h=400") -->
      <% end %>

      <h3 id="test" class="mt-3">Type your guess</h3>


        <form action="/words/flashcards_second" method="post" id="flashcards">

          <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">


          <div class="form-group">

            <input type="text"  class="form-control" name="flashcards[guess]" autofocus>
          </div>

          <input type="hidden" name="flashcards[word]" value=<%= @word.id %> >

          <input type="submit" value="Submit" class="btn btn-primary btn-lg w-100">

        </form>

               <% if @answer %>
        <h1 style="color: red;">Wrong!</h1>
        <% end %>

        <div class="btn btn-primary mt-3" id="show_word_button" data-word=<%= @word.word %> >Show answer</div>
        <div id="answer" class="hidden_answer mt-2">
          <%= @word.word %>
        </div>








    </div>
  </div>
</div>









