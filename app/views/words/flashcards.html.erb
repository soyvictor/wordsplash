<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-sm-4 offset-sm-4 mt-5">
      <div class="mb-3">
      <%= link_to 'Word List', words_path %>
      </div>

      <% if @word.image_urls.present? %>
      <%= image_tag(@photo.gsub("w=150&h=150", "w=250&h=250"), :alt => "nothing yet...") %>
      <% end %>
      <!-- .concat("&w=180&h=180") -->
      <% if current_user.language == 'spanish' %>
        <h3 id="test" class="mt-3">What's this in Spanish?</h3>
      <% else %>
        <h3 id="test" class="mt-3">What's this in English?</h3>
      <% end %>


        <form action="/words/flashcards_second" method="post" id="flashcards">

          <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">


          <div class="form-group">

            <input type="text"  class="form-control" name="flashcards[guess]" autofocus>
          </div>

          <input type="hidden" name="flashcards[word]" value=<%= @word.id %> >

          <input type="hidden" name="flashcards[photo]" value=<%= @photo %> >

          <input type="submit" value="Submit" class="btn btn-primary btn-lg w-100">

        </form>

               <% if @wrong %>
        <h1 style="color: red;">Wrong!</h1>
        <% end %>

        <div class="btn btn-primary mt-3" id="show_word_button" data-word=<%= @word.word %> >Show answer</div>
        <div id="answer" class="hidden_answer mt-2">
          <% if current_user.language == 'spanish' %>
            <%= @word.word %>
          <% else %>
            <%= @word.translation %>
          <% end %>
        </div>








    </div>
  </div>
</div>



<%= javascript_pack_tag 'show_answer' %>





