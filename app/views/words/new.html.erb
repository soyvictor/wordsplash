<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3 mt-5">

      <%= link_to 'Words List', words_path %> | <%= link_to 'Flashcards', flashcards_words_path %> | <%= link_to 'Oral Practice', practice_words_path %>
      <div class="my-2"></div>
      <%= simple_form_for [@word], html: { class: "form-inline"} do |f| %>
      <%= f.input :word, label: false, placeholder: 'Type any word in Spanish or English', input_html: {style: 'display: inline; width: 300px'} %>
      <%= f.submit 'Submit', class: "btn btn-primary", style: "margin-left: 8px" %>
      <% end %>
    </div>
  </div>
</div>
