<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3 mt-5" style="display: flex; justify-content: center;">
      <div class="my-5">
        <h3>Type any word in Spanish or English</h3>
        <div>
          <%= simple_form_for [@word], html: { class: "form-inline"} do |f| %>
            <%= f.input :word, label: false, input_html: {style: 'display: inline; width: 240px'} %>
            <%= f.submit 'Submit', class: "btn btn-primary", style: "margin-left: 8px" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
