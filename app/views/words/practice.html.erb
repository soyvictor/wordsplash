<!-- <body style="position: relative;"> -->
<p id="moving-word" class="pt-5 mt-3 ml-5 mb-5" style="position: absolute; z-index: 10;"><%= @moving_word %></p>
<div class="container mt-3 mb-5">
  <div class="row">
    <div class="col-sm-6 offset-sm-3" style="display: flex; justify-content: center;">
      <div>
        <% if @all_words.empty? %>
        <h3>You haven't added any words yet.</h3>
        <% else %>
        <h3 style="text-align: center" class="mt-3">Repeat each word out loud several times </h3>
        <%= image_tag(@photo.gsub("w=150&h=150", "w=250&h=250"), class: "my-3", :alt => "nothing yet...")%>
        <p style="font-size: 16px; color: black; text-align: left; color: green; margin-top: 8px;">"<%= @displayed_word %>"</p>
        <form action="/words/practice" method="get" id="">
          <input type="hidden" name="nextword" value=<%= @index2 + 1 %> >
          <div style="text-align: center" class="mt-4">
            <input type="submit" value="Next word >" class="btn btn-primary" style="position: absolute; z-index: 10;">
          </div>
        </form>
        <% end %>
      </div>
    </div>
  </div>
</div>
